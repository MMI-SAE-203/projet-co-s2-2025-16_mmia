<Layout titre={post.Titre}>
    <div class="max-w-4xl mx-auto space-y-8">
        
        <!-- Version Claire -->
        <div class="bg-[var(--blanc-casse)] rounded-2xl shadow-lg p-6 max-w-sm">
            <!-- Header avec profil -->
            <div class="flex items-start justify-between mb-6">
                <div class="flex items-center space-x-3">
                    <div class="w-12 h-12 bg-gray-200 rounded-full overflow-hidden">
                        <img src={user.img} alt={user.img} class="w-full h-full object-cover rounded-full">
                    </div>
                    <div>
                        <h3 class="font-semibold text-gray-800">{user.expand.user.Pseudo}</h3>
                        <p class="text-sm text-gray-500">{post.created}</p>
                        <p class="text-sm text-gray-500">15h21</p>
                    </div>
                </div>
                
                <!-- Menu et coeur -->
                <div class="flex items-center space-x-3">
                    <button class="text-gray-400 hover:text-gray-600">
                        <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
                            <circle cx="8" cy="2" r="1.5"/>
                            <circle cx="8" cy="8" r="1.5"/>
                            <circle cx="8" cy="14" r="1.5"/>
                        </svg>
                    </button>
                    <button class="text-purple-500 hover:text-purple-600">
