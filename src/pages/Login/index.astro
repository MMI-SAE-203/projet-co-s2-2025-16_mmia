---
import Layout from "../../layouts/Layout.astro";
import Logo from "../../assets/icones/logo.svg";
import "../../styles/tailwind.css";
import "../../styles/font.css";
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>Astro Basics</title>
    </head>

    <style>
        .bg-gradient-purple {
            background: linear-gradient(
                135deg,
                #8b5cf6 0%,
                #a855f7 50%,
                #9333ea 100%
            );
        }
    </style>
    <body class="bg-[var(--gris-anthracite)] overflow-hidden">
        <div class="flex">
            <div
                class="flex-1 relative bg-[var(--gris-anthracite)] flex items-center justify-start pl-16"
            >
                <div
                    class="absolute top-0 right-0 w-200 h-200 bg-gradient-purple rounded-full transform translate-x-120 -translate-y-120"
                >
                </div>

                <div
                    class="absolute bottom-0 left-0 w-200 h-200 bg-gradient-purple rounded-full transform -translate-x-100 translate-y-125"
                >
                </div>

                <div class="flex items-center relative">
                    <h1
                        class="text-8xl font-bold text-center text-[var(--blanc-casse)]"
                    >
                        Bon retour sur<br />
                        notre site
                    </h1>
                </div>
            </div>

            <div
                class="w-2/5 h-screen bg-white shadow-2xl flex flex-col justify-center px-8 relative"
            >
                <div class="flex justify-center mb-8">
                    <div
                        class="w-12 h-12 rounded-lg flex items-center justify-center"
                    >
                        <a href="/"><Logo /></a>
                    </div>
                </div>

                <h2
                    class="text-2xl font-semibold text-gray-900 mb-8 text-center"
                >
                    Connexion
                </h2>

                <form class="space-y-6">
                    <div>
                        <label
                            class="block text-sm font-medium text-gray-700 mb-2"
                        >
                        </label>
                        <input
                            type="email"
                            placeholder="hello@gmail.com"
                            class="w-full text-[var(--gris-anthracite)] px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent outline-none transition-all bg-gray-50"
                        />
                    </div>

                    <!-- Champ mot de passe -->
                    <div>
                        <label
                            class="block text-sm font-medium text-gray-700 mb-2"
                        >
                            Mot de passe
                        </label>
                        <input
                            type="password"
                            placeholder="••••••••"
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg text-[var(--gris-anthracite)] focus:ring-2 focus:ring-purple-500 focus:border-transparent outline-none transition-all bg-gray-50"
                        />
                    </div>

                    <!-- Se souvenir de moi -->
                    <div class="flex items-center justify-between">
                        <label class="flex items-center">
                            <input
                                type="checkbox"
                                class="rounded border-gray-300 text-purple-600 focus:ring-purple-500"
                            />
                            <span class="ml-2 text-sm text-gray-600"
                                >Se souvenir de moi</span
                            >
                        </label>
                        <a
                            href="#"
                            class="text-sm text-purple-600 hover:text-purple-700"
                        >
                            Mot de passe oublié ?
                        </a>
                    </div>

                    <!-- Bouton connexion -->
                    <button
                        type="submit"
                        class="w-full bg-gradient-purple text-white py-3 px-4 rounded-lg font-medium hover:opacity-90 transition-opacity focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2"
                    >
                        Connexion
                    </button>

                    <!-- Lien inscription -->
                    <div class="text-center pt-4">
                        <span class="text-sm text-gray-600"
                            >Pas de compte ?
                        </span>
                        <a
                            href="#"
                            class="text-sm text-purple-600 hover:text-purple-700 font-medium"
                        >
                            Inscription
                        </a>
                    </div>
                </form>
            </div>
        </div>

        <script>
            // Animation subtile au chargement
            window.addEventListener("load", function () {
                const elements = document.querySelectorAll(".relative");
                elements.forEach((el, index) => {
                    el.style.opacity = "0";
                    el.style.transform = "translateY(0px)";
                    setTimeout(() => {
                        el.style.transition = "all 0.6s ease";
                        el.style.opacity = "1";
                        el.style.transform = "translateY(0)";
                    }, index * 200);
                });
            });

            // Effet hover sur les champs
            const inputs = document.querySelectorAll("input");
            inputs.forEach((input) => {
                input.addEventListener("focus", function () {
                    this.parentElement.style.transform = "scale(1.02)";
                    this.parentElement.style.transition = "transform 0.2s ease";
                });

                input.addEventListener("blur", function () {
                    this.parentElement.style.transform = "scale(1)";
                });
            });
        </script>
    </body>
</html>
