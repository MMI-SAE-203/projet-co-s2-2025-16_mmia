<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Authentification</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        .form-container {
            transition: all 0.3s ease-in-out;
        }
        .form-hidden {
            opacity: 0;
            transform: translateX(50px);
            pointer-events: none;
        }
        .form-visible {
            opacity: 1;
            transform: translateX(0);
            pointer-events: auto;
        }
    </style>
</head>
<body class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 flex items-center justify-center p-4">
    
    <div class="w-full max-w-md">
        <!-- Toggle Buttons -->
        <div class="flex mb-8 bg-white rounded-lg p-1 shadow-sm">
            <button id="loginTab" class="flex-1 py-2 px-4 text-sm font-medium rounded-md transition-all duration-200 bg-indigo-500 text-white">
                Connexion
            </button>
            <button id="registerTab" class="flex-1 py-2 px-4 text-sm font-medium rounded-md transition-all duration-200 text-gray-600 hover:text-gray-800">
                Inscription
            </button>
        </div>

        <!-- Login Form -->
        <div id="loginForm" class="form-container form-visible bg-white rounded-xl shadow-lg p-8">
            <div class="text-center mb-8">
                <h2 class="text-2xl font-bold text-gray-800">Connexion</h2>
                <p class="text-gray-600 mt-2">Connectez-vous à votre compte</p>
            </div>

            <form id="loginFormElement" class="space-y-6">
                <div>
                    <label for="login" class="block text-sm font-medium text-gray-700 mb-2">
                        Adresse email
                    </label>
                    <input 
                        type="email" 
                        id="login" 
                        name="login"
                        required
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors duration-200 outline-none"
                        placeholder="votre@email.com"
                    >
                </div>

                <div>
                    <label for="passwd" class="block text-sm font-medium text-gray-700 mb-2">
                        Mot de passe
                    </label>
                    <input 
                        type="password" 
                        id="passwd" 
                        name="passwd"
                        required
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors duration-200 outline-none"
                        placeholder="••••••••"
                    >
                </div>

                <div class="flex items-center justify-between">
                    <label class="flex items-center">
                        <input type="checkbox" class="w-4 h-4 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500">
                        <span class="ml-2 text-sm text-gray-600">Se souvenir de moi</span>
                    </label>
                    <a href="#" class="text-sm text-indigo-600 hover:text-indigo-500">
                        Mot de passe oublié ?
                    </a>
                </div>

                <button 
                    type="submit" 
                    class="w-full bg-indigo-600 text-white py-3 px-4 rounded-lg hover:bg-indigo-700 focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 transition-colors duration-200 font-medium"
                >
                    Se connecter
                </button>
            </form>
        </div>

        <!-- Register Form -->
        <div id="registerForm" class="form-container form-hidden bg-white rounded-xl shadow-lg p-8">
            <div class="text-center mb-8">
                <h2 class="text-2xl font-bold text-gray-800">Inscription</h2>
                <p class="text-gray-600 mt-2">Créez votre nouveau compte</p>
            </div>

            <form id="registerFormElement" class="space-y-6">
                <div>
                    <label for="nom" class="block text-sm font-medium text-gray-700 mb-2">
                        Nom complet
                    </label>
                    <input 
                        type="text" 
                        id="nom" 
                        name="nom"
                        required
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors duration-200 outline-none"
                        placeholder="Jean Dupont"
                    >
                </div>

                <div>
                    <label for="loginReg" class="block text-sm font-medium text-gray-700 mb-2">
                        Adresse email
                    </label>
                    <input 
                        type="email" 
                        id="loginReg" 
                        name="loginReg"
                        required
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors duration-200 outline-none"
                        placeholder="votre@email.com"
                    >
                </div>

                <div>
                    <label for="passwdReg" class="block text-sm font-medium text-gray-700 mb-2">
                        Mot de passe
                    </label>
                    <input 
                        type="password" 
                        id="passwdReg" 
                        name="passwdReg"
                        required
                        minlength="6"
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors duration-200 outline-none"
                        placeholder="••••••••"
                    >
                    <p class="text-xs text-gray-500 mt-1">Au moins 6 caractères</p>
                </div>

                <div class="flex items-center">
                    <input 
                        type="checkbox" 
                        id="terms" 
                        required
                        class="w-4 h-4 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500"
                    >
                    <label for="terms" class="ml-2 text-sm text-gray-600">
                        J'accepte les 
                        <a href="#" class="text-indigo-600 hover:text-indigo-500">conditions d'utilisation</a>
                        et la 
                        <a href="#" class="text-indigo-600 hover:text-indigo-500">politique de confidentialité</a>
                    </label>
                </div>

                <button 
                    type="submit" 
                    class="w-full bg-indigo-600 text-white py-3 px-4 rounded-lg hover:bg-indigo-700 focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 transition-colors duration-200 font-medium"
                >
                    Créer mon compte
                </button>
            </form>
        </div>
    </div>

    <!-- Import du script externe -->
    <script type="module" src="./auth.js"></script>
</body>
</html>